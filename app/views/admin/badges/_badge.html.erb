<tr>
  <td class="align-middle"><%= badge.name %></td>
  <td class="align-middle">
    <%= image_tag badge.image, :alt => "image", size: 100 %>
  </td>
  <td class="align-middle"><%= badge.rule %></td>
  <td class="align-middle"><%= badge.parameter %></td>
  <td class="align-middle"><%= link_to t('admin.answers.answer.show'), admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('admin.answers.answer.edit'), edit_admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('admin.answers.answer.delete'), admin_badge_path(badge),
                                       method: :delete,
                                       data: { confirm: t('admin.answers.answer.del_confirm') } %>
  </td>
</tr>
