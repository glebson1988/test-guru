<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <div class="form-group">
    <p>
      <%= form.label :rule %>
      <%= form.select(:rule, [[t('.success_category'), category_rule],
                              [t('.first_try'), first_try_rule],
                              [t('.all_level'), level_rule]],
                      prompt: t('.prompt')) %>
    </p>

    <p>
      <%= form.label :image %>
      <%= form.text_field :image %>
    </p>

    <p>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </p>

    <p>
      <%= form.label :parameter %>
      <%= form.text_field :parameter %>
    </p>

    <p><%= form.submit class: "btn btn-primary" %></p>
<% end %>
</div>
