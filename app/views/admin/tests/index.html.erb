<div class="row justify-content-center mt-3">
  <div class="col col-md-4"><h1><%= t('tests.index.header') %></h1></div>

  <div class="col-12"><%= link_to t('.new_test'), new_admin_test_path %>
    <table class="table table-striped">
      <thead>
      <tr>
        <th class="sort-by-title pointer">
          <%= t('tests.index.name') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th><%= t('tests.index.category') %></th>
        <th><%= t('tests.index.level') %></th>
        <th><%= t('tests.index.quest_count') %></th>
        <th colspan="3"><%= t('tests.index.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <%= render @tests %>
      </tbody>
    </table>
  </div>
</div>

