<tr>
  <td><%= link_to test.title, test_path(test) %></td>
  <td><%= test.category.title %></td>
  <td><%= test_level(test) %></td>
  <td><%= test.questions.size %></td>
  <td><%= link_to 'Изменить', edit_test_path(test) %></td>
